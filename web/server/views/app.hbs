<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Noted! Workbench</title>
  <link rel="stylesheet" href="/css/general.css">
  <link rel="stylesheet" href="/css/app.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

</head>

<body>

  <div id="toolbar" style="display: flex; gap: 1rem; flex-wrap: wrap;">
    <!-- Drawing Tools -->
    <div class="toolbar-group" title="Drawing Tools">
      <label title="Pick Color">
        <i class="fas fa-palette"></i>
        <input type="color" id="colorPicker" value="#000" />
      </label>
      <label title="Brush Size">
        <i class="fas fa-paint-brush"></i>
        <input type="range" id="brushSize" min="1" max="20" value="2" />
      </label>
      <button class="btnSecondary" id="eraserBtn" title="Add Textbox">
        <i class="fa-solid fa-eraser"></i>/<i class="fas fa-paint-brush"></i>
      </button>
    </div>

    <!-- Add Elements -->
    <div class="toolbar-group" title="Insert Elements">
      <button class="btnSecondary" onclick="addTextbox()" title="Add Textbox">
        <i class="fas fa-font"></i>
      </button>
      <button class="btnSecondary" onclick="addTable()" title="Add Table">
        <i class="fas fa-table"></i>
      </button>
    </div>

    <!-- Media Input -->
    <div class="toolbar-group" title="Insert Media">
      <label title="Upload Image">
        <i class="fas fa-image inputSecondary"></i>
        <input class="inputSecondary" type="file" id="imageInput" accept="image/*" style="display: none;" />
      </label>
      <label title="Upload PDF">
        <i class="fas fa-file-pdf inputSecondary"></i>
        <input class="inputSecondary" type="file" id="pdfInput" accept="application/pdf" style="display: none;" />
      </label>
      <label title="Import Project File">
        <i class="fas fa-upload inputSecondary"></i>
        <input class="inputSecondary" type="file" id="importFile" accept=".json" onchange="importProject()"
          style="display: none;" />
      </label>
    </div>

    <!-- Project Control -->
    <div class="toolbar-group" title="Project Tools">
      <button class="btnSecondary" onclick="exportAsPDF()" title="Export as PDF">
        <i class="fas fa-file-export"></i>
      </button>
      <button class="btnSecondary" onclick="exportAsProject()" title="Export Project File">
        <i class="fas fa-download"></i>
      </button>
      <button class="btnSecondary" id="undoBtn" title="Undo">
        <i class="fa-solid fa-arrow-rotate-left"></i>
      </button>
      <button class="btnSecondary" id="redoBtn" title="Redo">
        <i class="fa-solid fa-arrow-rotate-right"></i>
      </button>
    </div>
  </div>


  <div class="page zoomable" id="page-1">
    <div id="canvasWrapper" class="canvasWrapper">
      <canvas id="drawingCanvas" width="1240" height="1754"></canvas>
    </div>
    <div id="btnContainer">
      <button onclick="addNewPage()" class="addPageBtn btnPrimary">ï¼‹ New Page</button>
    </div>
  </div>

  <script>
    window.onload = () => {
      const firstCanvas = document.getElementById('drawingCanvas');
      initializeCanvas(firstCanvas);
    };
  </script>

  <script src="/js/app/canvas-core.js"></script>
  <script src="/js/app/elementManager.js"></script>
  <script src="/js/app/canvas-utilities.js"></script>
  <script src="/js/app/project-export.js"></script>
  <script src="/js/app/pages.js"></script>
  <script src="/js/app/main.js"></script>
  <script src="/js/app/zoom-handler.js"></script>0
</body>

</html>